<?xml version="1.0" encoding="UTF-8"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <!-- Directories to scan -->
    <file>bootstrap</file>
    <file>language</file>
    <file>src</file>
    <file>test</file>
    <file>../public_html</file>

    <!-- Arguments -->
    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <arg value="p"/>
    <arg name="parallel" value="8"/>

    <!-- Rules -->
    <rule ref="PSR12">
        <exclude name="PSR2.Classes.ClassDeclaration.OpenBraceNewLine"/>
        <exclude name="PSR2.Methods.FunctionCallSignature.Indent"/>
        <exclude name="PSR2.Methods.FunctionDeclaration.OpenBraceNewLine"/>
        <exclude name="PSR12.ControlStructures.ControlStructureSpacing.LineIndent"/>
    </rule>
    <rule ref="Squiz.PHP.NonExecutableCode">
        <exclude name="Squiz.Functions.MultiLineFunctionDeclaration.BraceOnSameLine"/>
        <exclude name="Squiz.Functions.MultiLineFunctionDeclaration.Indent"/>
        <exclude name="Squiz.ControlStructures.ControlSignature.MultiLineCondition"/>
    </rule>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="80"/>
            <property name="absoluteLineLimit" value="120"/>
        </properties>
        <exclude-pattern>language/app.lang-*.php</exclude-pattern>
        <exclude-pattern>test/*.php</exclude-pattern>
    </rule>
    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="indent" value="2"/>
        </properties>
    </rule>
</ruleset>
