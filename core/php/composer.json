{
  "name": "sebastienkeroack/skportfolio",
  "type": "project",
  "description": "This project is a custom-built website designed to host and showcase a multilingual personal portfolio.",
  "authors": [
    {
      "name": "Sébastien Kéroack",
      "email": "dev@sebastienkeroack.com",
      "homepage": "https://www.sebastienkeroack.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=8.2.12",
    "phpmailer/phpmailer": ">=6.9.2",
    "vlucas/phpdotenv": ">=5.6",
    "monolog/monolog": ">=3.9"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": ">=3.11.3",
    "pestphp/pest": ">=3.8"
  },
  "autoload": {
    "psr-4": {
      "SKPortfolio\\": "src/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "vendor-dir": "vendor",
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "test": "@php vendor/bin/pest --colors=always",
    "lint": "@php vendor/bin/phpcs",
    "fix": "@php vendor/bin/phpcbf"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "keywords": [
    "portfolio",
    "multilingual",
    "frontend",
    "backend",
    "web development",
    "css",
    "html",
    "javascript",
    "php",
    "ssi"
  ],
  "support": {
    "issues": "https://github.com/SebastienKeroack/skportfolio/issues",
    "source": "https://github.com/SebastienKeroack/skportfolio"
  },
  "license": "Apache-2.0"
}
