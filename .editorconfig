# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
# Non-configurable Prettier behaviors
charset = utf-8
insert_final_newline = true
# Configurable Prettier behaviors
end_of_line = lf
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{css,js,mjs,php,ps1}]
max_line_length = 80

[*.{js,mjs}]
quote_type = single
semi = true
